      "source": [
        "bin= int(input(\"Enter any binary number \"))\n",
        "sum= 0\n",
        "i=0\n",
        "while bin!=0:\n",
        "  sum= sum + (bin % 10)*(2**i)\n",
        "  bin= bin//10\n",
        "  i=i+1\n",
        "print(\"the decimal form is \",sum)"
      ]
